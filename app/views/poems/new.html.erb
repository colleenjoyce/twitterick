<div class="jumbotron">
	<h1>Create a poem</h1>
	<div class="words">
		<p>Choose from our list of Twitter personalities</p>
	</div>
	<form action="/poems" method="POST">
		<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
		<div class="row">
		<select class="input-lg col-md-offset-3 col-md-4" name="id">
			<% @twitter_handles.each do |handle| %>
				<option value="<%= handle.id %>"><%= handle.name %></option>
			<% end %>
		</select>
		<input id="handles-select-submit" class="btn btn-default btn-lg col-md-3" type="submit"> 
</div>

<div class="link-below">
	<a class="link-below" href="/twitter_handles/new">...or submit one of your own.</a>
</div>