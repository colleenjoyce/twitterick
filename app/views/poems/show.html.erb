<div class="display poem">
	<ul>
	<% @tweets.each do |tweet| %>
		<li>
		<a href="<%= tweet.tweet.tweet_status_url %>">
		<%= tweet.tweet.text %>
		</a>
		<h6><a href="https://twitter.com/<%= tweet.tweet.twitter_handle.handle %>"><%= tweet.tweet.twitter_handle.handle %></a></h6>
		</li>
	<% end %>
	</ul>
<% if @liked %>

	<form class="dislike-button" action="/poems/:id/like" method="post">
		<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
		<button type="submit" class="btn btn-default">Dislike</button>
	</form>
<% else %>

	<form class="like-button" action=<%=poem_like_path(@poem.id)%> method="post">
		<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
		<button type="submit" class="btn btn-default">Like</button>	
	</form>
<% end %>
</div>
