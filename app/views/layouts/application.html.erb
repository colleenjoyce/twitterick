<!DOCTYPE html>
<html>
<head>
	<title>Twitterick</title>
	<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => false %>
	<%= javascript_include_tag "application", "data-turbolinks-track" => false %>
	<%= csrf_meta_tags %>
</head>
<body>
	
	<div class="navbar navbar-default" role="navigation">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="/">Twitterick</a>
			</div>
			<div class="navbar-collapse collapse">
				<% if user_signed_in? %>
				<form class="navbar-form navbar-right" role="form" action="/users/sign_out" method="post">
					<input type="hidden" name="_method" value="delete">
					<button type="submit" class="btn btn-default">Sign out</button>
				</form>
				<ul class="nav navbar-nav navbar-right">
					<li><a href="/users/<%= current_user.id %>"><%= current_user.email %></a></li>
				</ul>
				<% else %>
				<form class="navbar-form navbar-right" role="form" action="/users/sign_in" method="post">
					<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
					<input type="hidden" name="user[remember_me]" value="0">
					<div class="form-group"><input type="email" placeholder="Email" class="form-control" name="user[email]" required="true"></div>
					<div class="form-group"><input type="password" placeholder="Password" class="form-control" name="user[password]" required="true"></div>
					<button type="submit" class="btn btn-default">Sign in</button>
				</form>
				<form class="navbar-form navbar-right" role="form" action="/users/sign_up" method="post">
					<input type="hidden" name="_method" value="get">
					<button type="submit" class="btn btn-default">Sign up</button>
				</form>
				<% end %>
			</div><!--/.navbar-collapse -->
		</div>
	</div>


	<div class="container">
		<% if notice %>
		<div class="alert alert-success alert-dismissable">
			<button type="button" class="close" data-dismiss="alert" aria-hidden=" true">&times;</button><%= notice %>
		</div>
		<% end %>
		<% if alert %>
		<div class="alert alert-danger alert-dismissable">
			<button type="button" class="close" data-dismiss="alert" aria-hidden=" true">&times;</button><%= alert %>
		</div>
		<% end %>

		<%= yield %>


	</div>
</body>
</html>
